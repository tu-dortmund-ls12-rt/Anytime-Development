{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2-Build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/packages && colcon build --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && mv build/compile_commands.json ..",
            "problemMatcher": []
        },
        {
            "label": "ROS2-Run-Cpp-Anytime-Single-Threaded",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_examples anytime.launch.py threading_type:=single",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-Run-Cpp-Anytime-Multi-Threaded",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_examples anytime.launch.py threading_type:=multi",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
