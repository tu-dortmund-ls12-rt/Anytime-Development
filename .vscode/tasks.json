{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2-Build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/packages && colcon build --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && mv build/compile_commands.json ..",
            "problemMatcher": []
        },
        {
            "label": "ROS2-Monte-Carlo-Client",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_monte_carlo action_client.launch.py",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-Monte-Carlo-Server",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_monte_carlo action_server.launch.py anytime_reactive:=${input:anytime_reactive} separate_thread:=${input:separate_thread} multi_threading:=${input:multi_threading}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "anytime_reactive",
            "type": "pickString",
            "description": "Select the anytime_reactive parameter",
            "options": [
                "true",
                "false"
            ],
            "default": "false"
        },
        {
            "id": "separate_thread",
            "type": "pickString",
            "description": "Select the separate_thread parameter",
            "options": [
                "true",
                "false"
            ],
            "default": "false"
        },
        {
            "id": "multi_threading",
            "type": "pickString",
            "description": "Select the multi_threading parameter",
            "options": [
                "true",
                "false"
            ],
            "default": "false"
        }
    ]
}