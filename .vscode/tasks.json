{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2-Prepare-Packages-Windows",
            "type": "shell",
            "command": "unix2dos ${workspaceFolder}/packages/src/video_publisher/scripts/video_publisher.py && chmod +x ${workspaceFolder}/packages/src/video_publisher/scripts/video_publisher.py && unix2dos ${workspaceFolder}/packages/src/video_publisher/scripts/detection_visualizer.py && chmod +x ${workspaceFolder}/packages/src/video_publisher/scripts/detection_visualizer.py",
            "problemMatcher": []
        },
        {
            "label": "ROS2-Prepare-Packages-Linux",
            "type": "shell",
            "command": "dos2unix ${workspaceFolder}/packages/src/video_publisher/scripts/video_publisher.py && chmod +x ${workspaceFolder}/packages/src/video_publisher/scripts/video_publisher.py && dos2unix ${workspaceFolder}/packages/src/video_publisher/scripts/detection_visualizer.py && chmod +x ${workspaceFolder}/packages/src/video_publisher/scripts/detection_visualizer.py",
            "problemMatcher": []
        },
        {
            "label": "ROS2-Build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/packages && colcon build --symlink-install --allow-overriding rclcpp rclcpp_action rclcpp_components rclcpp_lifecycle --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ROS2-Build-No-Cuda",
            "type": "shell",
            "command": "cd ${workspaceFolder}/packages && colcon build --symlink-install --packages-select vision_msgs rclcpp rclcpp_action rclcpp_components rclcpp_lifecycle anytime_interfaces anytime_monte_carlo --allow-overriding rclcpp rclcpp_action rclcpp_components rclcpp_lifecycle --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && mv build/compile_commands.json ..",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ROS2-Video-Publisher",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch video_publisher video_publisher.launch.py",
            "problemMatcher": []
        },
        {
            "label": "ROS2-Detection-Visualizer",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch video_publisher detection_visualizer.launch.py",
            "problemMatcher": []
        },
        {
            "label": "ROS2-Monte-Carlo-Client",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_monte_carlo action_client.launch.py",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-Monte-Carlo-Server",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_monte_carlo action_server.launch.py is_reactive_proactive:=${input:is_reactive_proactive} multi_threading:=${input:multi_threading} batch_size:=${input:batch_size}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-Yolo-Client",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_yolo action_client.launch.py",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-Yolo-Server",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch anytime_yolo action_server.launch.py is_reactive_proactive:=${input:is_reactive_proactive} multi_threading:=${input:multi_threading} batch_size:=${input:batch_size} is_passive_cooperative:=${input:is_passive_cooperative} is_sync_async:=${input:is_sync_async}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-RViz",
            "type": "shell",
            "command": "source ${workspaceFolder}/packages/install/setup.bash && ros2 launch video_publisher rviz.launch.py",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "ROS2-Download-Weights",
            "type": "shell",
            "command": "cd ${workspaceFolder}/packages/src/anytime_yolo && wget https://tu-dortmund.sciebo.de/s/W86QE9hUscsUPeM/download -O weights.zip && unzip -o weights.zip -d . && rm weights.zip",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "ROS2-Download-Images",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/packages/src/video_publisher/images && cd ${workspaceFolder}/packages/src/video_publisher/images && wget https://tu-dortmund.sciebo.de/s/aA9MDhgN2lBmeZk/download -O images.zip && unzip -o images.zip -d . && rm images.zip",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "is_reactive_proactive",
            "type": "pickString",
            "description": "Select the is_reactive_proactive parameter",
            "options": [
                "reactive",
                "proactive"
            ],
            "default": "reactive"
        },
        {
            "id": "multi_threading",
            "type": "pickString",
            "description": "Select the multi_threading parameter",
            "options": [
                "true",
                "false"
            ],
            "default": "false"
        },
        {
            "id": "batch_size",
            "type": "promptString",
            "description": "Enter the batch size parameter",
            "default": "1"
        },
        {
            "id": "is_passive_cooperative",
            "type": "pickString",
            "description": "Select the is_passive_cooperative parameter",
            "options": [
                "passive",
                "cooperative"
            ],
            "default": "cooperative"
        },
        {
            "id": "is_sync_async",
            "type": "pickString",
            "description": "Select the is_sync_async parameter",
            "options": [
                "sync",
                "async"
            ],
            "default": "sync"
        }
    ]
}